<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <!-- Local nupkg output from the SchemaTools project -->
    <add key="SchemaTools-Local" value="../nupkg" />
    <!-- Public NuGet feed for SDK and other dependencies -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
  </packageSources>

  <!-- Force SchemaTools to come from local source only -->
  <packageSourceMapping>
    <packageSource key="SchemaTools-Local">
      <package pattern="SchemaTools" />
    </packageSource>
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>
</configuration>
